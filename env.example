# Конфигурация Telegram бота
BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# Дополнительные настройки
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=20
MAX_VIDEO_SIZE_MB=300
SPAM_LIMIT=5

# Яндекс уведомления об инцидентах
# SMTP настройки для Яндекс почты
YANDEX_SMTP_ENABLED=false
YANDEX_SMTP_HOST=smtp.yandex.ru
YANDEX_SMTP_PORT=587
YANDEX_SMTP_USER=your_email@yandex.com
YANDEX_SMTP_PASSWORD=your_app_password_here
YANDEX_SMTP_USE_TLS=true

# Получатели уведомлений об инцидентах
INCIDENT_NOTIFICATION_EMAILS=admin@company.com
INCIDENT_NOTIFICATION_SMS_NUMBERS=+79000000000

# Yandex Cloud Notification Service (опционально)
YANDEX_CLOUD_ENABLED=false
YANDEX_CLOUD_FOLDER_ID=your_folder_id
YANDEX_CLOUD_OAUTH_TOKEN=your_oauth_token
YANDEX_CLOUD_NOTIFICATION_CHANNEL_ID=your_channel_id

# Настройки уведомлений
NOTIFICATION_PRIORITY_HIGH=true
NOTIFICATION_INCLUDE_LOCATION=true
NOTIFICATION_INCLUDE_MEDIA_INFO=true